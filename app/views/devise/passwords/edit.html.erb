<div class="row">
  <div class="col-md-8 col-md-offset-2 text-center border-bottom">
    <h2>Change your password</h2>
  </div>
</div>

<div class="row main-log-in-panel">
  <div class="form-fields-box col-md-4 col-md-offset-4">
    <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages!(override_sentence: "Could not reset password because:") %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.password_field :password, autofocus: true, autocomplete: "off", label: "New password (min 8 chars)" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", label: "Confirm new password" %>
      </div>

      <div class="actions text-center">
        <%= f.submit "Change password", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
