<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <h2>SIGN UP</h2>
  </div>
</div>

<div class="row main-log-in-panel">
  <div class="form-fields-box border-top border-right col-md-4 col-md-offset-2">
    <%= bootstrap_form_for(resource, as: resource_name, url: user_registration_path(resource), method: :post) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions text-center">
        <%= f.submit "Sign up", class: "btn btn-primary log-in-sign-up-button" %>
      </div>
    <% end %>
  </div>

  <%= render partial: "shared/social_buttons" %>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
