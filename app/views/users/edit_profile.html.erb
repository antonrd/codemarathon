<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center border-bottom">
    <h2>Edit profile</h2>
  </div>
</div>

<div class="row main-log-in-panel">
  <%= bootstrap_form_for(@user, url: update_profile_path(@user), html: { method: :post }) do |f| %>

    <div class="form-fields-box col-md-4 col-md-offset-4">
      <div class="text-center"><h4>
        <span class="label label-primary">
          <%= @user.email %>
        </span>
      </h4></div>

      <div class="text-center"><h4>
        <% @user.roles.each do |role| %>
          <span class="label label-success"><%= role.role_type %></span>
        <% end %>
      </h4></div>

      <div class="field">
        <%= f.text_field :name, autocomplete: "off", label: "Name" %>
      </div>
    </div>

    <div class="clearfix"></div>

    <div class="col-md-4 col-md-offset-4 margin-top-small">
      <div class="actions text-center">
        <%= f.submit "Update profile", class: "btn btn-primary" %>
      </div>
    </div>

  <% end %>

</div>
