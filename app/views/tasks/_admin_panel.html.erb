<% if current_user.is_teacher? %>
  <div class="panel panel-primary">
    <div class="panel-body text-center">
      <%= link_to 'View', task_path(@task), class: "btn btn-primary" %>
      <%= link_to 'Edit', edit_task_path(@task), class: "btn btn-primary" %>
      <%= link_to 'Solve', solve_task_path(@task), class: "btn btn-primary" %>
      <%= link_to 'Runs', runs_task_path(@task), class: "btn btn-primary" %>
      <%= link_to 'Run limits', runs_limits_task_path(@task), class: "btn btn-primary" %>
      <span class="label label-primary">
        Memory limit: <%= @task.memory_limit_kb %> KB
      </span>
      &nbsp;
      <span class="label label-success">
        Time limit: <%= @task.time_limit_ms %> ms
      </span>
    </div>
  </div>
  <h2 class="text-center"><%= @task.title %></h2>
<% end %>
