<div class="row">
  <div class="col-sm-12">
    <div class="row">
      <div class="col-sm-8">
        <%= render partial: 'lesson_top_links' %>

        <div class="row quiz-title">
          <h2 class="text-center"><%= @quiz.title %></h2>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-8">
        <%= render partial: 'quizzes/show_attempt', locals: { quiz: @quiz, quiz_attempt: @quiz_attempt, attempt_answers: @attempt_answers } %>
      </div>

      <div class="col-sm-4">
        <div class="lesson-sidebar">
          <%= render partial: 'classrooms/quizzes/attempt_quiz_sidebar' %>
        </div>
      </div>
    </div>
  </div>
</div>
