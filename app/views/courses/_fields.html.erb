<%= bootstrap_form_for(@course) do |f| %>
  <div class="row">
    <div class="text-center col-sm-8 col-sm-offset-2">
      <%= f.check_box :visible %>
      <%= f.check_box :public %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <%= f.text_field :title, class: "input-lg", placeholder: "Course title", required: true %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <%= f.text_field :subtitle, class: "input-lg", placeholder: "Course subtitle (optional)" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <%= f.text_field :slug, class: "input-lg", placeholder: "Slug used in URLs", required: true %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <%= f.text_area :markdown_description, rows: 6, label: "Description for main page panel via markdown (preview doesn't support code blocks and tables)", "data-provide" => "markdown", placeholder: "Short description, which will show on the courses list", required: true %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <%= f.text_area :markdown_long_description, rows: 20, label: "Long description via markdown (preview doesn't support code blocks and tables)", "data-provide" => "markdown", placeholder: "Longer course description, which will show on the main course page", required: true %>
    </div>
  </div>

  <div class="row text-center">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
