<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-primary">
      <div class="panel-heading"><%= link_to course.title, course_path(course) %></div>
      <div class="panel-body">
        <%= render inline: course.description %>
      </div>
      <% if user_signed_in? && current_user.is_teacher? %>
        <div class="panel-footer">
          <%= link_to 'Edit', edit_course_path(course) %>
          |
          <%= link_to 'Delete', course_path(course), method: :delete, data: { confirm: "Are you sure you want to delete the course '#{course.title}'?" } %>
          <span class="pull-right glyphicon glyphicon-eye-<%= course.visible ? 'open' : 'close' %>" aria-hidden="true"></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
