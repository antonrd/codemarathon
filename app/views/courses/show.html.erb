<div class="course-page">
  <div class="course-title">
    <h2 class="text-center"><%= @course.title %></h2>
    <% if @course.subtitle.present? %>
      <h3 class="text-center"><%= @course.subtitle %></h3>
    <% end %>
  </div>

  <div class="course-description">
    <div class="row">
      <div class="col-md-4 col-md-offset-2">
        <%= render inline: @course.long_description %>
      </div>
      <div class="col-md-4 text-center">
        <div class="course-summary text-center">
          <table>
            <tr>
              <td>LESSONS</td>
              <td>PRACTICE TASKS</td>
            </tr>
            <tr class="course-values">
              <td><%= @course.lessons.count %></td>
              <td><%= @course.tasks.count %></td>
            </tr>
          </table>
        </div>
        <div class="call-to-action">
          <% if user_signed_in? %>
            <% if @course.classrooms.first.is_admin?(current_user) || @course.classrooms.first.is_student?(current_user) %>
              <%= link_to 'Go to classroom', classroom_path(@course.classrooms.first), class: "btn btn-lg btn-primary" %>
            <% else %>
              <%= link_to 'Enroll in classroom', enroll_classroom_path(@course.classrooms.first), method: :post, class: "btn btn-lg btn-success" %>
            <% end %>
          <% else %>
            <%= link_to 'Log in to enroll in classroom', new_user_session_path, class: "btn btn-lg btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
