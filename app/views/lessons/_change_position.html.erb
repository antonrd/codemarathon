<td class="col-md-1">
  <% unless lesson.is_first? %>
    <%= button_to  move_up_lesson_path(lesson), method: :post, class: 'btn btn-sm btn-primary' do %>
      <span class="glyphicon glyphicon-arrow-up"></span>
    <% end %>
  <% end %>
</td>

<td class="col-md-1">
  <% unless lesson.is_last? %>
    <%= button_to move_down_lesson_path(lesson), method: :post, class: 'btn btn-sm btn-primary' do %>
      <span class="glyphicon glyphicon-arrow-down"></span>
    <% end %>
  <% end %>
</td>
