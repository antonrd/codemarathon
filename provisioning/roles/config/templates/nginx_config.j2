upstream codemarathon_unicorn {
  server unix:/tmp/unicorn.{{ app_name }}.sock fail_timeout=0;
}

server {
  listen         80;
  server_name    {{ server_name }};
  return         301 https://$server_name$request_uri;
}

server {
  listen       443 ssl;
  server_name {{ server_name }};
  root {{ app_root }}/public;

  ssl                  on;
  ssl_certificate      /etc/nginx/ssl/train.hiredintech.com.crt;
  ssl_certificate_key  /etc/nginx/ssl/train.hiredintech.com.key;

  ssl_session_timeout  5m;

  ssl_protocols  SSLv2 SSLv3 TLSv1 TLSv1.1 TLSv1.2;
  ssl_ciphers  HIGH:!aNULL:!MD5;
  ssl_prefer_server_ciphers   on;

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  try_files $uri/index.html $uri @codemarathon_unicorn;
  location @codemarathon_unicorn {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-Proto https;
    proxy_redirect off;
    proxy_pass http://codemarathon_unicorn;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 4G;
  keepalive_timeout 10;
}
